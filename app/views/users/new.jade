extends ../layout

block append nav-links
  li: a(href="/sessions/new") Login
  li.active: a(href="/users/new") Register

block append content
  .container
    .row
      .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
        .row
          .panel.panel-default
            .panel-heading
              h3.panel-title Register
            .panel-body
              if(error != '')
                .alert.alert-danger
                  strong Error! #{error}
              form(accept-charset="UTF-8", role="form", action="/users/create", method="post")
                fieldset
                  .form-group
                    input.form-control(placeholder="Name", name="name", type="text")
                  .form-group
                    input.form-control(placeholder="Username", name="username", type="text")
                  .form-group
                    input.form-control(placeholder="Password", name="password", type="password")
                  input.btn.btn-lg.btn-success.btn-block(type="submit", value="Register")
              .separator
                hr
                span or
              a.btn.btn-block.btn-default.btn-lg(href="/sessions/new") Go to Login
