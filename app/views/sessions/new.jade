extends ../layout

block append content
  .container
    .row
      .col-md-4.col-md-offset-4
        .row
          .panel.panel-default
            .panel-heading
              h3.panel-title Login
            .panel-body
              if(error != '')
                .alert.alert-danger
                  strong Error! #{error}
              form(accept-charset="UTF-8", role="form", action="/sessions/create", method="post")
                fieldset
                  .form-group
                    input.form-control(placeholder="Username", name="username", type="text")
                  .form-group
                    input.form-control(placeholder="Password", name="password", type="password")
                  input.btn.btn-lg.btn-success.btn-block(type="submit", value="Login")
        .row: a.pull-right(href="/users/new") Register
